{% extends "pragmatic-translations/_layout" %}

{% set title = "Entradas"|t('pragmatic-translations') %}
{% set selectedTab = 'entries' %}

{% set crumbs = [
    { label: "Translations"|t('pragmatic-translations'), url: url('pragmatic-translations') },
    { label: "Entradas"|t('pragmatic-translations'), url: url('pragmatic-translations/entries') },
] %}

{% block content %}
  {% css %}
    tr.entry-group-border > td { border-top: 2px solid #d1d5db; }
    .at-btn { background: none; border: none; cursor: pointer; padding: 2px 4px; opacity: 0.5; font-size: 14px; line-height: 1; }
    .at-btn:hover { opacity: 1; }
    .at-btn.loading { opacity: 0.3; pointer-events: none; }
    .at-source-select { margin-left: 8px; }
  {% endcss %}
  <div class="flex" style="margin-top: 12px; gap: 16px; align-items: flex-end;">
    <form method="get" id="entries-filter" class="flex" style="gap: 12px; align-items: flex-end;">
      <input type="hidden" name="page" value="1">
      <div>
        <label for="q">Search</label>
        <input class="text" type="text" id="q" name="q" value="{{ search }}" placeholder="Entry title">
      </div>
      <div>
        <label for="section">Section</label>
        <div class="select">
          <select id="section" name="section">
            <option value="">All</option>
            {% for section in sections %}
              <option value="{{ section.id }}" {{ section.id == sectionId ? 'selected' : '' }}>{{ section.name }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div>
        <label for="field">Field</label>
        <div class="select">
          <select id="field" name="field">
            {% for option in fieldOptions %}
              <option value="{{ option.value }}" {{ option.value == fieldFilter ? 'selected' : '' }}>{{ option.label }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div>
        <label for="perPage">Per page</label>
        <div class="select">
          <select id="perPage" name="perPage">
            {% for option in [50, 100, 250] %}
              <option value="{{ option }}" {{ option == perPage ? 'selected' : '' }}>{{ option }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      {% if autotranslateAvailable %}
        <div>
          <label for="at-source-lang">Translate from</label>
          <div class="select">
            <select id="at-source-lang">
              {% for language in languages %}
                <option value="{{ language }}">{{ language }}</option>
              {% endfor %}
            </select>
          </div>
        </div>
      {% endif %}
    </form>
  </div>

  <form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('pragmatic-translations/translations/save-entry-row') }}
    {{ redirectInput('pragmatic-translations/entries', { q: search, perPage: perPage, page: page, section: sectionId, field: fieldFilter }) }}

    <table class="data fullwidth" style="margin-top: 16px;">
      <thead>
        <tr>
          <th>Entry</th>
          <th>Field</th>
          {% for language in languages %}
            <th>
              {{ language }}
              {% if autotranslateAvailable %}
                <button type="button" class="at-btn js-at-column" data-language="{{ language }}" title="Translate column to {{ language }}">&#127760;</button>
              {% endif %}
            </th>
          {% endfor %}
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {% for row in rows %}
          {% set rowIndex = loop.index0 %}
          {% set entryId = row.entry.id %}
          {% set prevEntryId = loop.first ? null : rows[loop.index0 - 1].entry.id %}
          {% set isFirstOfGroup = entryId != prevEntryId %}
          <tr{{ isFirstOfGroup and not loop.first ? ' class="entry-group-border"' : '' }} data-entry-id="{{ entryId }}">
            {% if isFirstOfGroup %}
              <td rowspan="{{ entryRowCounts[entryId] }}" style="vertical-align: top;">
                <a href="#" class="js-entry-slideout" data-entry-id="{{ entryId }}">{{ row.entry.title|default('Entry #' ~ entryId) }}</a>
                <div class="light">{{ row.entry.section.name ?? row.entry.type.name ?? 'No section or type' }}</div>
                {% if autotranslateAvailable %}
                  <button type="button" class="btn small js-at-entry" data-entry-id="{{ entryId }}" style="margin-top: 6px;" title="Translate all fields of this entry">Translate</button>
                {% endif %}
              </td>
            {% endif %}
            <td>
              <input type="hidden" name="entries[{{ rowIndex }}][entryId]" value="{{ entryId }}">
              <input type="hidden" name="entries[{{ rowIndex }}][fieldHandle]" value="{{ row.fieldHandle }}">
              <div>{{ row.fieldLabel }}</div>
              <div class="light">{{ row.fieldHandle }}</div>
            </td>
            {% for language in languages %}
              <td>
                <div style="display: flex; align-items: center; gap: 2px;">
                  <input class="text fullwidth js-at-input" name="entries[{{ rowIndex }}][values][{{ language }}]" value="{{ row.values[language] ?? '' }}" data-row-index="{{ rowIndex }}" data-language="{{ language }}">
                  {% if autotranslateAvailable %}
                    <button type="button" class="at-btn js-at-cell" data-row-index="{{ rowIndex }}" data-language="{{ language }}" title="Translate this cell">&#127760;</button>
                  {% endif %}
                </div>
              </td>
            {% endfor %}
            <td style="white-space: nowrap;">
              <button class="btn submit" type="submit" name="saveRow" value="{{ rowIndex }}">Save</button>
              {% if autotranslateAvailable %}
                <button type="button" class="btn small js-at-row" data-row-index="{{ rowIndex }}" title="Translate this row">&#127760;</button>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </form>

  <div class="flex justify-between align-center" style="margin-top: 16px;">
    <div>{{ total }} total</div>
    <div class="flex" style="gap: 8px; align-items: center;">
      {% set prevPage = page > 1 ? page - 1 : 1 %}
      {% set nextPage = page < totalPages ? page + 1 : totalPages %}
      {% if page == 1 %}
        <span class="btn disabled">Prev</span>
      {% else %}
        <a class="btn" href="{{ url('pragmatic-translations/entries', { q: search, perPage: perPage, page: prevPage, section: sectionId, field: fieldFilter }) }}">Prev</a>
      {% endif %}
      <div>Page {{ page }} / {{ totalPages }}</div>
      {% if page == totalPages %}
        <span class="btn disabled">Next</span>
      {% else %}
        <a class="btn" href="{{ url('pragmatic-translations/entries', { q: search, perPage: perPage, page: nextPage, section: sectionId, field: fieldFilter }) }}">Next</a>
      {% endif %}
    </div>
  </div>

  {% js %}
    (function() {
      const filterForm = document.getElementById('entries-filter');
      const searchInput = document.getElementById('q');
      const sectionSelect = document.getElementById('section');
      const fieldSelect = document.getElementById('field');
      const perPageSelect = document.getElementById('perPage');

      if (filterForm) {
        const pageInput = filterForm.querySelector('input[name="page"]');
        function resetPageAndSubmit() {
          if (pageInput) pageInput.value = '1';
          filterForm.submit();
        }

        let searchTimer = null;
        if (searchInput) {
          searchInput.addEventListener('input', function() {
            if (searchTimer) clearTimeout(searchTimer);
            searchTimer = setTimeout(resetPageAndSubmit, 300);
          });
        }
        [sectionSelect, fieldSelect, perPageSelect].forEach(function(el) {
          if (el) el.addEventListener('change', resetPageAndSubmit);
        });
      }

      document.querySelectorAll('.js-entry-slideout').forEach(function(link) {
        link.addEventListener('click', function(ev) {
          ev.preventDefault();
          const entryId = parseInt(link.getAttribute('data-entry-id'), 10);
          if (!entryId || !window.Craft) return;
          Craft.createElementEditor('craft\\elements\\Entry', {
            elementId: entryId,
            slideout: true
          });
        });
      });

      {% if autotranslateAvailable %}
      /* ── Autotranslate logic ── */
      const autotranslateTextUrl = {{ autotranslateTextUrl|json_encode|raw }};
      const allLanguages = {{ languages|json_encode|raw }};

      function getSourceLang() {
        const sel = document.getElementById('at-source-lang');
        return sel ? sel.value : allLanguages[0];
      }

      function getInput(rowIndex, language) {
        return document.querySelector('.js-at-input[data-row-index="' + rowIndex + '"][data-language="' + language + '"]');
      }

      function setLoading(btns, loading) {
        btns.forEach(function(btn) {
          if (loading) btn.classList.add('loading');
          else btn.classList.remove('loading');
        });
      }

      /**
       * Core translate function.
       * targets: array of {rowIndex, language}
       * triggerBtns: buttons to set loading state on
       */
      async function translateCells(targets, triggerBtns) {
        const sourceLang = getSourceLang();
        triggerBtns = triggerBtns || [];

        // Filter out targets where language === sourceLang
        targets = targets.filter(function(t) { return t.language !== sourceLang; });
        if (targets.length === 0) return;

        // Group by target language
        const groups = {};
        targets.forEach(function(t) {
          if (!groups[t.language]) groups[t.language] = [];
          groups[t.language].push(t);
        });

        setLoading(triggerBtns, true);

        try {
          const promises = Object.keys(groups).map(async function(targetLang) {
            const group = groups[targetLang];
            const texts = group.map(function(t) {
              const srcInput = getInput(t.rowIndex, sourceLang);
              return srcInput ? srcInput.value : '';
            });

            // Skip if all texts are empty
            if (texts.every(function(t) { return t.trim() === ''; })) return;

            const response = await Craft.sendActionRequest('POST', autotranslateTextUrl, {
              data: {
                texts: texts,
                sourceLang: sourceLang,
                targetLang: targetLang,
                mimeType: 'text/plain'
              }
            });

            if (response.data && response.data.success && response.data.translations) {
              response.data.translations.forEach(function(translated, i) {
                // Only fill in if source was not empty
                if (texts[i].trim() === '') return;
                const targetInput = getInput(group[i].rowIndex, targetLang);
                if (targetInput) targetInput.value = translated;
              });
            }
          });

          await Promise.all(promises);
        } catch (err) {
          Craft.cp.displayError(err.response && err.response.data && err.response.data.error ? err.response.data.error : 'Translation failed.');
        } finally {
          setLoading(triggerBtns, false);
        }
      }

      // Cell button
      document.querySelectorAll('.js-at-cell').forEach(function(btn) {
        btn.addEventListener('click', function() {
          var rowIndex = btn.getAttribute('data-row-index');
          var language = btn.getAttribute('data-language');
          translateCells([{rowIndex: rowIndex, language: language}], [btn]);
        });
      });

      // Row button
      document.querySelectorAll('.js-at-row').forEach(function(btn) {
        btn.addEventListener('click', function() {
          var rowIndex = btn.getAttribute('data-row-index');
          var targets = allLanguages.map(function(lang) {
            return {rowIndex: rowIndex, language: lang};
          });
          translateCells(targets, [btn]);
        });
      });

      // Column button
      document.querySelectorAll('.js-at-column').forEach(function(btn) {
        btn.addEventListener('click', function() {
          var language = btn.getAttribute('data-language');
          var inputs = document.querySelectorAll('.js-at-input[data-language="' + language + '"]');
          var targets = [];
          inputs.forEach(function(input) {
            targets.push({rowIndex: input.getAttribute('data-row-index'), language: language});
          });
          translateCells(targets, [btn]);
        });
      });

      // Entry button
      document.querySelectorAll('.js-at-entry').forEach(function(btn) {
        btn.addEventListener('click', function() {
          var entryId = btn.getAttribute('data-entry-id');
          var entryRows = document.querySelectorAll('tr[data-entry-id="' + entryId + '"]');
          var targets = [];
          entryRows.forEach(function(tr) {
            var inputs = tr.querySelectorAll('.js-at-input');
            inputs.forEach(function(input) {
              targets.push({
                rowIndex: input.getAttribute('data-row-index'),
                language: input.getAttribute('data-language')
              });
            });
          });
          translateCells(targets, [btn]);
        });
      });
      {% endif %}
    })();
  {% endjs %}
{% endblock %}
