{% extends "_layouts/cp" %}

{% set title = "Translations" %}
{% set selectedSubnavItem = "translations" %}

{% block content %}
  <div class="flex" style="gap: 24px;">
    <aside id="pt-sidebar" style="width: 200px; flex: 0 0 200px;">
      <div style="position: sticky; top: 24px;">
        <div class="flex justify-between align-center" style="margin-bottom: 8px;">
          <div class="meta">Navigation</div>
          <button class="btn small" id="pt-sidebar-toggle" type="button">Collapse</button>
        </div>
        <ul class="nav" id="pt-sidebar-nav">
          <li><a href="#entries">Entradas</a></li>
          <li><a href="#import-export">Importar/exportar</a></li>
          <li><a href="#groups">Grupos</a></li>
          <li><a href="#options">Opciones</a></li>
        </ul>
      </div>
    </aside>

    <div style="flex: 1;">
      <div class="flex justify-between align-center">
        <h1>Translations</h1>
      </div>

      <div id="import-export" style="margin-top: 16px;">
        <h2>Importar/exportar</h2>
        <div class="flex" style="margin-top: 12px; gap: 16px; align-items: flex-end;">
          <div class="btngroup">
            <a class="btn" href="{{ url('pragmatic-translations/export', { format: 'csv' }) }}">Export CSV</a>
            <a class="btn" href="{{ url('pragmatic-translations/export', { format: 'json' }) }}">Export JSON</a>
            <a class="btn" href="{{ url('pragmatic-translations/export', { format: 'php' }) }}">Export PHP</a>
          </div>

          <form method="post" enctype="multipart/form-data" accept-charset="UTF-8" style="margin-left: auto;">
            {{ csrfInput() }}
            {{ actionInput('pragmatic-translations/translations/import') }}
            {{ redirectInput('pragmatic-translations', { group: group, q: search, perPage: perPage }) }}
            <div class="flex" style="gap: 8px; align-items: flex-end;">
              <div>
                <label for="format">Import</label>
                <div class="select">
                  <select id="format" name="format">
                    <option value="csv">CSV</option>
                    <option value="json">JSON</option>
                    <option value="php">PHP (ZIP)</option>
                  </select>
                </div>
              </div>
              <input type="file" name="file" required>
              <button class="btn" type="submit">Upload</button>
            </div>
          </form>
        </div>
      </div>

      <div id="entries" style="margin-top: 24px;">
        <h2>Entradas</h2>

        <div class="flex" style="gap: 12px; margin-top: 8px; flex-wrap: wrap;">
          <div class="hud-stat">
            <div class="label">Total keys</div>
            <div class="value">{{ total }}</div>
          </div>
          <div class="hud-stat">
            <div class="label">Groups</div>
            <div class="value">{{ groups|length }}</div>
          </div>
          <div class="hud-stat">
            <div class="label">Languages</div>
            <div class="value">{{ languages|length }}</div>
          </div>
        </div>

        <div class="flex" style="margin-top: 12px; gap: 16px; align-items: flex-end;">
          <form method="get" class="flex" style="gap: 12px; align-items: flex-end;">
            <input type="hidden" name="group" value="{{ group }}">
            <input type="hidden" name="page" value="1">
            <div>
              <label for="q">Search</label>
              <input class="text" type="text" id="q" name="q" value="{{ search }}" placeholder="Key">
            </div>
            <div>
              <label for="perPage">Per page</label>
              <div class="select">
                <select id="perPage" name="perPage">
                  {% for option in [50, 100, 250] %}
                    <option value="{{ option }}" {{ option == perPage ? 'selected' : '' }}>{{ option }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <button class="btn" type="submit">Filter</button>
            <a class="btn" href="{{ url('pragmatic-translations', { group: group, perPage: perPage }) }}">Reset</a>
          </form>
        </div>

        <div class="tabs" style="margin-top: 16px;">
          <ul>
            {% for groupName in groups %}
              <li>
                <a class="{{ groupName == group ? 'sel' : '' }}" href="{{ url('pragmatic-translations', { group: groupName, q: search, perPage: perPage }) }}">{{ groupName }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <form method="post" accept-charset="UTF-8">
          {{ csrfInput() }}
          {{ actionInput('pragmatic-translations/translations/save') }}
          {{ redirectInput('pragmatic-translations', { group: group, q: search, perPage: perPage, page: page }) }}

          <table class="data fullwidth" id="translations-table" style="margin-top: 16px;">
            <thead>
              <tr>
                <th>Key</th>
                {% for language in languages %}
                  <th>{{ language }}</th>
                {% endfor %}
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              {% for translation in translations %}
                <tr>
                  <td>
                    <input type="hidden" name="translations[{{ loop.index0 }}][id]" value="{{ translation.id }}">
                    <input class="text fullwidth" name="translations[{{ loop.index0 }}][key]" value="{{ translation.key }}" required>
                    <input type="hidden" name="translations[{{ loop.index0 }}][group]" value="{{ group }}">
                  </td>
                  {% for language in languages %}
                    <td>
                      {% set value = '' %}
                      {% for site in sites %}
                        {% if site.language == language and translation.values[site.id] is defined %}
                          {% set value = translation.values[site.id] %}
                        {% endif %}
                      {% endfor %}
                      <input class="text fullwidth" name="translations[{{ loop.parent.loop.index0 }}][values][{{ language }}]" value="{{ value }}">
                    </td>
                  {% endfor %}
                  <td>
                    <label class="checkbox">
                      <input type="checkbox" name="translations[{{ loop.index0 }}][delete]" value="1">
                      <span></span>
                    </label>
                  </td>
                </tr>
              {% endfor %}

              {% set newIndex = translations|length %}
              <tr data-new-row="1">
                <td>
                  <input class="text fullwidth" name="translations[{{ newIndex }}][key]" placeholder="New key">
                  <input type="hidden" name="translations[{{ newIndex }}][group]" value="{{ group }}">
                </td>
                {% for language in languages %}
                  <td>
                    <input class="text fullwidth" name="translations[{{ newIndex }}][values][{{ language }}]" placeholder="">
                  </td>
                {% endfor %}
                <td></td>
              </tr>
            </tbody>
          </table>

          <div class="buttons" style="margin-top: 12px;">
            <button class="btn" id="add-row" type="button">Add Row</button>
            <button class="btn submit" type="submit">Save</button>
          </div>
        </form>

        <div class="flex justify-between align-center" style="margin-top: 16px;">
          <div>{{ total }} total</div>
          <div class="flex" style="gap: 8px; align-items: center;">
            {% set prevPage = page > 1 ? page - 1 : 1 %}
            {% set nextPage = page < totalPages ? page + 1 : totalPages %}
            <a class="btn {{ page == 1 ? 'disabled' : '' }}" href="{{ url('pragmatic-translations', { group: group, q: search, perPage: perPage, page: prevPage }) }}">Prev</a>
            <div>Page {{ page }} / {{ totalPages }}</div>
            <a class="btn {{ page == totalPages ? 'disabled' : '' }}" href="{{ url('pragmatic-translations', { group: group, q: search, perPage: perPage, page: nextPage }) }}">Next</a>
          </div>
        </div>
      </div>

      <div id="groups" style="margin-top: 24px;">
        <h2>Grupos</h2>
        <form method="post" accept-charset="UTF-8">
          {{ csrfInput() }}
          {{ actionInput('pragmatic-translations/translations/save-groups') }}
          {{ redirectInput('pragmatic-translations', { group: group, q: search, perPage: perPage, page: page }) }}

          <table class="data fullwidth" style="margin-top: 12px;">
            <thead>
              <tr>
                <th>Group</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              {% for groupName in groups %}
                <tr>
                  <td>
                    <input type="hidden" name="groups[{{ loop.index0 }}][original]" value="{{ groupName }}">
                    {% if groupName == 'site' %}
                      <input class="text fullwidth" value="{{ groupName }}" disabled>
                    {% else %}
                      <input class="text fullwidth" name="groups[{{ loop.index0 }}][name]" value="{{ groupName }}">
                    {% endif %}
                  </td>
                  <td>
                    {% if groupName != 'site' %}
                      <label class="checkbox">
                        <input type="checkbox" name="groups[{{ loop.index0 }}][delete]" value="1">
                        <span></span>
                      </label>
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}

              {% set newGroupIndex = groups|length %}
              <tr data-new-group="1">
                <td>
                  <input type="hidden" name="groups[{{ newGroupIndex }}][original]" value="">
                  <input class="text fullwidth" name="groups[{{ newGroupIndex }}][name]" placeholder="New group">
                </td>
                <td></td>
              </tr>
            </tbody>
          </table>

          <div class="buttons" style="margin-top: 12px;">
            <button class="btn" id="add-group-row" type="button">Add Group</button>
            <button class="btn submit" type="submit">Save Groups</button>
          </div>
        </form>
      </div>

      <div id="options" style="margin-top: 24px;">
        <h2>Opciones</h2>
        <p class="light">No options available yet.</p>
      </div>
    </div>
  </div>

  {% js %}
    (function() {
      const sidebar = document.getElementById('pt-sidebar');
      const nav = document.getElementById('pt-sidebar-nav');
      const toggle = document.getElementById('pt-sidebar-toggle');
      if (sidebar && nav && toggle) {
        const applyState = function(collapsed) {
          if (collapsed) {
            sidebar.style.width = '52px';
            sidebar.style.flex = '0 0 52px';
            nav.style.display = 'none';
            toggle.textContent = 'Expand';
            sidebar.setAttribute('data-collapsed', '1');
          } else {
            sidebar.style.width = '200px';
            sidebar.style.flex = '0 0 200px';
            nav.style.display = '';
            toggle.textContent = 'Collapse';
            sidebar.setAttribute('data-collapsed', '0');
          }
        };

        const saved = localStorage.getItem('ptSidebarCollapsed');
        applyState(saved === '1');

        toggle.addEventListener('click', function() {
          const isCollapsed = sidebar.getAttribute('data-collapsed') === '1';
          const next = !isCollapsed;
          applyState(next);
          localStorage.setItem('ptSidebarCollapsed', next ? '1' : '0');
        });
      }

      const translationsTable = document.getElementById('translations-table');
      const addTranslationButton = document.getElementById('add-row');
      if (translationsTable && addTranslationButton) {
        addTranslationButton.addEventListener('click', function() {
          const body = translationsTable.querySelector('tbody');
          const template = body.querySelector('tr[data-new-row="1"]');
          if (!template) return;

          const newIndex = body.querySelectorAll('tr').length;
          const clone = template.cloneNode(true);
          clone.removeAttribute('data-new-row');

          clone.querySelectorAll('input').forEach(function(input) {
            const name = input.getAttribute('name');
            if (name) {
              input.setAttribute('name', name.replace(/translations\[\d+\]/, 'translations[' + newIndex + ']'));
            }
            input.value = '';
          });

          body.appendChild(clone);
        });
      }

      const addGroupButton = document.getElementById('add-group-row');
      if (addGroupButton) {
        addGroupButton.addEventListener('click', function() {
          const body = document.querySelector('#groups tbody');
          const template = body.querySelector('tr[data-new-group="1"]');
          if (!template) return;

          const newIndex = body.querySelectorAll('tr').length;
          const clone = template.cloneNode(true);
          clone.removeAttribute('data-new-group');

          clone.querySelectorAll('input').forEach(function(input) {
            const name = input.getAttribute('name');
            if (name) {
              input.setAttribute('name', name.replace(/groups\[\d+\]/, 'groups[' + newIndex + ']'));
            }
            input.value = '';
          });

          body.appendChild(clone);
        });
      }
    })();
  {% endjs %}
{% endblock %}
